{
  "name": "better-stack",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "build:packages": "turbo build:package",
    "check-exports": "turbo check-exports",
    "clean": "turbo clean && rm -rf .turbo node_modules",
    "dev": "turbo dev",
    "format": "prettier -uwl --cache .",
    "format:check": "prettier -ucl --cache .",
    "postinstall": "pnpm lint:ws",
    "lint": "turbo lint --continue -- --max-warnings 0 --cache --cache-location node_modules/.cache/eslint/.eslintcache",
    "lint:fix": "turbo lint --continue -- --fix --cache --cache-location node_modules/.cache/eslint/.eslintcache",
    "lint:package": "turbo lint:package",
    "lint:ws": "sherif",
    "prepare": "husky",
    "preview": "turbo preview",
    "typecheck": "turbo typecheck"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.3",
    "@commitlint/config-conventional": "^19.7.1",
    "@types/node": "^22.13.0",
    "commitlint": "^19.7.1",
    "cz-git": "^1.11.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2",
    "prettier-plugin-packagejson": "^2.5.8",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "publint": "^0.3.2",
    "sherif": "^1.2.0",
    "turbo": "^2.4.0",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=22.13.1"
  }
}
