{
  "name": "@repo/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./hc": {
      "types": "./dist/hc.d.ts",
      "default": "./dist/hc.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "pnpm typecheck && tsup",
    "build:package": "pnpm build",
    "check-exports": "attw --pack . --profile esm-only --ignore-rules cjs-resolves-to-esm no-resolution",
    "clean": "rm -rf .turbo dist node_modules",
    "db:push": "bunx drizzle-kit push --config drizzle.config.ts",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "lint:package": "publint",
    "test": "bun test",
    "test:db:down": "docker compose down",
    "test:db:up": "docker compose up -d",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/zod-openapi": "^0.18.4",
    "@repo/db": "workspace:^",
    "@scalar/hono-api-reference": "0.5.171",
    "better-auth": "^1.1.16",
    "drizzle-orm": "^0.39.2",
    "drizzle-zod": "^0.7.0",
    "hono": "^4.6.20",
    "hono-pino": "^0.7.0",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "stoker": "^1.4.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:^",
    "@repo/typescript-config": "workspace:^",
    "@types/bun": "latest",
    "@types/node": "^22.13.1",
    "drizzle-kit": "^0.30.4",
    "tsup": "^8.3.6"
  }
}
