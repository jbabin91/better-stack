{
  "name": "@repo/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./schema": {
      "types": "./src/schema/index.ts",
      "default": "./src/schema/index.ts"
    }
  },
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "clean": "rm -rf .turbo dist node_modules",
    "db:generate": "bunx drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "bunx drizzle-kit migrate --config drizzle.config.ts",
    "db:push": "bunx drizzle-kit push --config drizzle.config.ts",
    "db:studio": "bunx drizzle-kit studio --config drizzle.config.ts",
    "dev": "pnpm db:studio",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@t3-oss/env-core": "^0.12.0",
    "drizzle-orm": "^0.39.2",
    "drizzle-zod": "^0.7.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:^",
    "@repo/typescript-config": "workspace:^",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.4",
    "tsup": "^8.3.6"
  }
}
