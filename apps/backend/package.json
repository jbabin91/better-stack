{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "bun build --minify src/index.ts --target bun --outdir dist",
    "clean": "rm -rf .turbo dist node_modules",
    "db:generate": "bunx drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "bunx drizzle-kit migrate --config drizzle.config.ts",
    "db:push": "bunx drizzle-kit push --config drizzle.config.ts",
    "db:studio": "bunx drizzle-kit studio --config drizzle.config.ts",
    "dev": "bun run --hot src/index.ts",
    "lint": "eslint .",
    "preview": "pnpm build && bun run dist/index.js",
    "start": "bun run dist/index.js",
    "test": "bun test",
    "test:db:down": "docker compose down",
    "test:db:up": "docker compose up -d",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/zod-openapi": "^0.18.4",
    "@scalar/hono-api-reference": "0.5.171",
    "better-auth": "^1.1.16",
    "drizzle-orm": "^0.39.2",
    "drizzle-zod": "^0.7.0",
    "hono": "^4.6.20",
    "hono-pino": "^0.7.0",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "stoker": "^1.4.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:^",
    "@repo/typescript-config": "workspace:^",
    "@types/bun": "latest",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.4"
  }
}
